@model IEnumerable<SangalTec.Models.Entities.Categoria>
@section Styles{ }



<div class="content pt-5">
    <div class="container-fluid ">
        <div class="row  mb-5">
            <div class="col-6">
                <h2 class="text-primary">@ViewBag.Titulo</h2>
            </div>
            <div class="col-6 text-right">
                <a onclick="mostrarModal('@Url.Action("Crear","Categorias",null,Context.Request.Scheme)','Crear categoria')" class="btn btn-success"> Crear nueva Categoría</a>
            </div>
        </div>

        <div class="table-responsive">


            <table class="table table-striped" id="tabla">
                <thead>
                    <tr class="text-center">
                        <th scope="col">@Html.DisplayNameFor(model => model.CategoriaId)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var categoria in Model)
                    {
                        <tr class="text-center">
                            <th scope="row">@categoria.CategoriaId</th>
                            <td>@categoria.Nombre</td>
                            <td>
                                <a class="btn btn-success"  href="javascript:mostrarModal('@Url.Action("Editar","Categorias",new{id=categoria.CategoriaId},Context.Request.Scheme)','Editar Categoría')"><i title="Editar" class="fas fa-edit"></i></a>
                                <a class="btn btn-secondary" href="javascript:mostrarModal('@Url.Action("Detalle","Categorias",new{id=categoria.CategoriaId},Context.Request.Scheme)','Detalle de la categoria')"><i class="fas fa-sticky-note"></i></a>
                                <a class="btn btn-danger" href="javascript:Eliminar('@Url.Action("Eliminar", "Categorias",new{id=categoria.CategoriaId},Context.Request.Scheme)', 'Categoría', '¿Desea eliminar la categoria?')"><i title="Eliminar" class="fas fa-trash-alt"></i></a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts

{
    <script src="~/js/tabla.js"></script>
    <script src="~/js/site.js"></script>
}